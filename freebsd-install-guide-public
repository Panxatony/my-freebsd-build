#!/bin/sh
echo "IPMI Sensor Check"
/usr/local/sbin/ipmi-sensors | grep -E "FAN|System|Chassis|Voltage"  | cut -d "|" -f "2 4 5 6" | sed 's/|//g' | awk '{gsub(/^ +|  +\$/,"")}1'
__EOF__
chmod 555 /usr/local/etc/periodic/daily/ipmi-daily.sh

