mkdir -p /usr/jails/newjail/usr/packages
cd /usr/jails/newjail/usr/packages
pkg create portmaster
pkg create bash
pkg create vim-lite
pkg create gettext
pkg create libiconv

cp -a /usr/jails/flavors/ssh-default /usr/jails/flavors/my-default
cp /etc/skel/.vimrc /usr/jails/newjail/etc/skel/
cp /etc/skel/.vimrc /usr/jails/newjail/root
cp /etc/skel/.vimrc /usr/jails/flavors/my-default/usr/home/qjail
cp -a /usr/home/jason/.ssh /usr/jails/flavors/my-default/usr/home/qjail/

chown -R 1001:0 /usr/jails/flavors/my-default/usr/home/qjail
perl -pwi -e 's^setenv\tEDITOR\tee^setenv\tEDITOR\tvim^g' /usr/jails/flavors/my-default/root/.cshrc
perl -pwi -e 's^setenv\tEDITOR\tvi^setenv\tEDITOR\tvim^g' /usr/jails/flavors/my-default/usr/home/qjail/.cshrc


perl -pwi -e 's^syslogd_flags="-ss"^syslogd_flags="-s -v -v"^g' /usr/jails/flavors/my-default/etc/rc.conf
perl -pwi -e 's^#*.*\t\t\t\t\t\t\@loghost^*.*\t\t\t\t\t\t\@10.100.102.2^g' /usr/jails/newjail/etc/syslog.conf

echo 'daily_show_success="NO"' >> /usr/jails/flavors/my-default/etc/periodic.conf
echo 'daily_status_security_inline="YES"' >> /usr/jails/flavors/my-default/etc/periodic.conf
echo 'daily_status_disks_enable="NO"' >> /usr/jails/flavors/my-default/etc/periodic.conf
echo 'daily_status_rwho_enable="NO"' >> /usr/jails/flavors/my-default/etc/periodic.conf

cat >> /usr/jails/flavors/my-default/etc/rc.conf << __EOF__

# Kernel Secure Level
kern_securelevel_enable="YES"
kern_securelevel="3"

# Clear Tmp
clear_tmp_enable="YES"

# Local Jail Configuration Follows
__EOF__

mkdir /usr/jails/newjail/zfs

