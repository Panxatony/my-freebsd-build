#\!/bin/sh
echo
echo "Network interface status:"
netstat -ibdh | sed 's/bytes/bts/g' | awk '/xts|Address/ {print \$4, "\t", \$8, "\t", \$11, "\t", \$6, "\t", \$7, "\t", \$10;}'
__EOF__
chmod 555 /usr/local/etc/periodic/daily/netstat-short.sh

################################################################################
# Move periodic to run 2 hours later and add a weekly `freebsd-update` check,
# `portsnap -I cron update` to keep the ports tree Index updated. This ensures
# the weekly `pkg version -v` works as intended.
#
# The new /etc/crontab will look like this:
#
# 1	5	*	*	*	root	periodic daily
# 5	5	*	*	6	root	portsnap -I cron update
# 15	6	*	*	6	root	periodic weekly
# 30	6	*	*	6	root	freebsd-update cron
# 30	7	1	*	*	root	periodic monthly
################################################################################

perl -pwi -e 's^1\t3\t\*\t\*\t\*\troot\tperiodic daily^1\t5\t*\t*\t*\troot\tperiodic daily^' /etc/crontab
perl -pwi -e 's^15\t4\t\*\t\*\t6\troot\tperiodic weekly^5\t5\t*\t*\t6\troot\tportsnap -I cron update\n15\t6\t*\t*\t6\troot\tperiodic weekly\n30\t6\t*\t*\t6\troot\tfreebsd-update cron^' /etc/crontab
perl -pwi -e 's^30\t5\t1\t\*\t\*\troot\tperiodic monthly^30\t7\t1\t*\t*\troot\tperiodic monthly^' /etc/crontab

################################################################################
# Put the portsnap cron into good use. Just run `portsup` with this script to
# update ports with what has already been downloaded during the weekly cron.
################################################################################

cat > /usr/local/sbin/portsup << __EOF__
#!/bin/sh
# Just a short script to quickly put the portsnap cron right into use
portsnap update
[ -e "/usr/jails/basejail/usr/ports/.portsnap.INDEX" ] \
    && portsnap -p "/usr/jails/basejail/usr/ports" update
__EOF__
chmod 555 /usr/local/sbin/portsup

