################################################################################
# Make SSH jail friendly by not allowing it to listen to all IP aliases
################################################################################

perl -pwi -e 's^#ListenAddress\ 0\.0\.0\.0^ListenAddress 10.100.102.2\nListenAddress 192.168.102.2^g' /etc/ssh/sshd_config
perl -pwi -e 's^#ListenAddress\ ::^ListenAddress 2001:123:4:5678::2\nListenAddress 2001:123:4567:890::2^g' /etc/ssh/sshd_config
service sshd restart

